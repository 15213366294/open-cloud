<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lyd.base.provider.mapper.BaseRoleAuthorityMapper">
    <resultMap id="BaseResultMap" type="com.github.lyd.base.client.model.entity.BaseRoleAuthority">
        <!--
          WARNING - @mbg.generated
        -->
        <result column="authority_id" jdbcType="BIGINT" property="authorityId"/>
        <result column="role_id" jdbcType="BIGINT" property="roleId"/>
        <result column="expire_time" jdbcType="TIMESTAMP" property="expireTime"/>
    </resultMap>

    <select id="selectRoleGrantedAuthority"
            resultType="com.github.lyd.common.security.OpenGrantedAuthority">
        SELECT
            a.authority_id,
            a.authority,
            rp.expire_time,
            a.serviceId,
            'role' as owner
        FROM
            base_role_authority AS rp
                LEFT JOIN base_authority AS a ON rp.authority_id = a.authority_id
        WHERE
            rp.role_id = #{roleId}
            and a.status = 1
    </select>

    <select id="selectRoleGrantedAuthorityDto"
            resultMap="com.github.lyd.base.provider.mapper.BaseAuthorityMapper.BaseAuthorityDto">
        SELECT
        a.*,
        rp.expire_time
        FROM
        base_role_authority AS rp
        LEFT JOIN base_authority AS a ON rp.authority_id = a.authority_id
        LEFT JOIN base_role AS r ON rp.role_id = r.role_id
        WHERE
        rp.role_id = #{roleId}
        and a.status = 1
    </select>
</mapper>
